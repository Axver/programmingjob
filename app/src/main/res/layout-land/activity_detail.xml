<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/button_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="Share"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="36dp" />

    <TextView
        android:id="@+id/label_place"
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="10dp"
        android:text="Company"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_comment" />

    <TextView
        android:id="@+id/text_place"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Secretary of the Navy/Assistant for Administration (DON/AA)"
        app:layout_constraintStart_toEndOf="@+id/label_place"
        android:layout_marginStart="68dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/label_place" />

    <TextView
        android:id="@+id/lable_job"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Position"
        app:layout_constraintStart_toStartOf="@+id/label_place"
        android:layout_marginStart="0dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/label_place" />

    <TextView
        android:id="@+id/text_job"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="PROGRAM ANALYST"
        app:layout_constraintBaseline_toBaselineOf="@+id/lable_job"
        app:layout_constraintStart_toStartOf="@+id/text_place"
        android:layout_marginStart="0dp" />

    <TextView
        android:id="@+id/label_open"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Open Date"
        app:layout_constraintStart_toStartOf="@+id/lable_job"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/lable_job" />

    <TextView
        android:id="@+id/text_open"
        android:layout_width="wrap_content"
        android:layout_height="17dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/label_open"
        app:layout_constraintStart_toStartOf="@+id/text_job"
        tools:text="2017-08-04" />

    <TextView
        android:id="@+id/label_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:text="Close Date"
        app:layout_constraintBaseline_toBaselineOf="@+id/text_open"
        app:layout_constraintStart_toEndOf="@+id/text_open" />

    <TextView
        android:id="@+id/text_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/label_close"
        app:layout_constraintStart_toEndOf="@+id/label_close"
        tools:text="2017-12-29" />
    <TextView
        android:id="@+id/label_url"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="More Info"
        app:layout_constraintStart_toStartOf="@+id/label_open"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/label_open" />

    <TextView
        android:id="@+id/text_url"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBaseline_toBaselineOf="@+id/label_url"
        app:layout_constraintStart_toStartOf="@+id/text_open"
        tools:text="http://" />






</android.support.constraint.ConstraintLayout>